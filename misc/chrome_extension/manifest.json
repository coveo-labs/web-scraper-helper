{
	"manifest_version": 2,
	"name": "Coveo Web Crawler",
	"description": "This extension shows a Google Image search result for the current page",
	"version": "1.0",
	"background": {
		"scripts": [
			"background.js"
		]
	},

	"devtools_page": "devtools.html",

	"content_scripts": [{
		"run_at": "document_end",
		"matches": [
			"http://*/*",
			"https://*/*"
		],
		"js": [
			"content-script.js"
		],
		"all_frames": false
	}],

	"permissions": [
		"tabs", "http://*/*", "https://*/*"
	]
}